<% include ../layout/header %>




<div class="container">
    <header class="jumbotron">
        <div class="container">
            <h1>Wllcome to yelpCamp</h1>

            <p>
                <a class="btn btn-large btn-primary" href="/camp/new">Add New Camp</a>
            </p>
        </div>
    </header>

    <div class="row text-center" style="display: flex; flex-wrap: wrap;">
        <!-- <div class="col-lg-12">
            <h3>Our Most Popular CampGround!</h3>
        </div> -->

        <% data.forEach(function(element){ %>
            <div class="col-md-3 col-sm-6">
                <!-- <h4><%= element.name %></h4> -->
               <div class="thumbnail">
                    <img src="<%= element.img %>" alt="YelpCamp">
                    <div class="caption">
                        <h4><%= element.name%></h4>
                    </div>
                    <p>
                        <a href="/camp/<%= element._id %>" class="btn btn-primary">More Info</a>
                    </p>
                </div>
               
            </div>
        <% }); %>
    </div>

        <!-- <h1>CampGround Page</h1> -->

        

</div>

<% include ../layout/footer %>